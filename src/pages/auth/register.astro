---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Registro a srmaca">
  <section
    class="bg-gradient-to-b from-[#526C63] to-black text-white h-screen flex items-center justify-center"
  >
    <div class="w-full max-w-xs">
      <form class="bg-black shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-2xl font-bold mb-6 text-center">Registro</h2>

        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="fullname">
            Nombre Completo
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="fullname"
            type="text"
            placeholder="Nombre Completo"
          />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="email">
            Correo Electrónico
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="email"
            type="email"
            placeholder="Correo Electrónico"
          />
        </div>

        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="password">
            Contraseña
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="password"
            type="password"
            placeholder="Contraseña"
          />
        </div>

        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="confirmPassword">
            Repetir Contraseña
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="confirmPassword"
            type="password"
            placeholder="Repetir Contraseña"
          />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="phone">
            Teléfono
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="phone"
            type="tel"
            placeholder="Teléfono"
          />
        </div>
        <div class="mb-4">
          <label class="block text-sm font-bold mb-2" for="adress">
            Dirección
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="adress"
            type="text"
            placeholder="Dirección"
          />
        </div>

        <div class="flex items-center justify-center">
          <button
            id="registerButton"
            class="bg-[#526C63] hover:bg-white hover:text-black transition-colors ease-in-out delay-100 duration-300 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            type="button"
          >
            Registrarse
          </button>
        </div>
        <div
          id="confirmationMessage"
          class="text-green-500 italic font-lg border border-white text-center mt-4 rounded-lg"
          style="display: none;"
        >
          <!-- Mensaje de confirmación -->
          Verifica tu correo electrónico para completar el registro. Revisa tu bandeja
          de entrada.
        </div>
        <div
          id="response"
          class="text-red-500 italic font-lg border border-white text-center mt-4 rounded-lg"
        >
        </div>
      </form>
    </div>
  </section>
</Layout>

<script>
  async function RegisterUser() {
    const email = (document.getElementById("email") as HTMLInputElement).value;
    const password = (document.getElementById("password") as HTMLInputElement)
      .value;
    const confirmPassword = (
      document.getElementById("confirmPassword") as HTMLInputElement
    ).value;
    const fullname = (document.getElementById("fullname") as HTMLInputElement)
      .value;
    const phone = (document.getElementById("phone") as HTMLInputElement).value;
    const address = (document.getElementById("adress") as HTMLInputElement)
      .value;

    const requestBody = {
      fullname: fullname,
      email: email,
      password: password,
      confirmpassword: confirmPassword,
      phone: phone,
      address: address,
    };
    if (
      email === "" ||
      password === "" ||
      confirmPassword === "" ||
      fullname === "" ||
      phone === "" ||
      address === ""
    ) {
      const responseElement = document.getElementById("response");
      responseElement.innerHTML = "Por favor llene todos los campos";
      return;
    }

    if (password !== confirmPassword) {
      const responseElement = document.getElementById("response");
      responseElement.innerHTML = "Las contraseñas no coinciden";
      return;
    }

    // const response = await fetch("https://srmacaback.fly.dev/auth/signup", {
    // const response = await fetch("http://localhost:8080/auth/signup", {
    //   method: "POST",
    //   headers: {
    //     "Content-Type": "application/json",
    //   },
    //   body: JSON.stringify(requestBody),
    // });
    // const responseBody = await response.json();
    const response = await fetch("https://srmacaback.fly.dev/auth/signup", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(requestBody),
    });
    const responseBody = await response.json();

    console.log(responseBody);
    if (response.ok) {
      // Oculta el formulario
      const formElement = document.querySelector("form");
      formElement.style.display = "none";

      // Muestra el mensaje de confirmación
      const confirmationMessageElement = document.getElementById(
        "confirmationMessage"
      );
      confirmationMessageElement.style.display = "block";
      setTimeout(() => {
        window.location.href = "/";
      }, 5000);
    } else {
      const responseElement = document.getElementById("response");
      responseElement.innerHTML = responseBody.error;
    }
  }

  const registerButton = document.getElementById("registerButton");
  registerButton.addEventListener("click", RegisterUser);
</script>
